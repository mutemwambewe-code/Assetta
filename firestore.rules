/**
 * @fileoverview Firestore Security Rules for PropEase Zambia.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data. Each user can only access their own data.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, which represents the authenticated user's ID.
 *   - /users/{userId}/properties/{propertyId}: Stores property data owned by the user.
 *   - /users/{userId}/tenants/{tenantId}: Stores tenant data managed by the user.
 *   - /users/{userId}/messagelogs/{messagelogId}: Stores message logs for a user
 *   - /users/{userId}/templates/{templateId}: Stores message templates for a user.
 *
 * Key Security Decisions:
 *  - Users can only list resources under their own user ID. Listing of all users is disallowed.
 *  - Data validation is relaxed during this prototyping phase, focusing on ownership and relational integrity.
 *
 * Denormalization for Authorization:
 *  - The rules leverage the path-based ownership model, avoiding the need for `get()` calls or denormalized `ownerId` fields within the documents themselves. The `userId` is extracted directly from the path.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requested user ID matches the authenticated user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the requested user ID matches the authenticated user ID and the resource exists.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for the /users/{userId} document.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (create) - Authenticated user with matching userId can create their user document.
     * @deny (create) - Authenticated user with non-matching userId cannot create a user document.
     * @principle Enforces user-ownership: Only the authenticated user can create their own user document.
     */
    match /users/{userId} {
      allow get: if false;
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Rules for the /users/{userId}/properties/{propertyId} collection.
     * @path /databases/{database}/documents/users/{userId}/properties/{propertyId}
     * @allow (create) - Authenticated user with matching userId can create a property document under their user ID.
     * @allow (update) - Authenticated user with matching userId can update a property document under their user ID.
     * @allow (delete) - Authenticated user with matching userId can delete a property document under their user ID.
     * @deny (create) - Authenticated user with non-matching userId cannot create a property document under another user ID.
     * @deny (update) - Authenticated user with non-matching userId cannot update a property document under another user ID.
     * @deny (delete) - Authenticated user with non-matching userId cannot delete a property document under another user ID.
     * @principle Enforces user-ownership: Only the authenticated user can manage properties under their own user ID.
     */
    match /users/{userId}/properties/{propertyId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/tenants/{tenantId} collection.
     * @path /databases/{database}/documents/users/{userId}/tenants/{tenantId}
     * @allow (create) - Authenticated user with matching userId can create a tenant document under their user ID.
     * @allow (update) - Authenticated user with matching userId can update a tenant document under their user ID.
     * @allow (delete) - Authenticated user with matching userId can delete a tenant document under their user ID.
     * @deny (create) - Authenticated user with non-matching userId cannot create a tenant document under another user ID.
     * @deny (update) - Authenticated user with non-matching userId cannot update a tenant document under another user ID.
     * @deny (delete) - Authenticated user with non-matching userId cannot delete a tenant document under another user ID.
     * @principle Enforces user-ownership: Only the authenticated user can manage tenants under their own user ID.
     */
    match /users/{userId}/tenants/{tenantId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

        /**
     * @description Rules for the /users/{userId}/messagelogs/{messagelogId} collection.
     * @path /databases/{database}/documents/users/{userId}/messagelogs/{messagelogId}
     * @allow (create) - Authenticated user with matching userId can create a message log document under their user ID.
     * @allow (update) - Authenticated user with matching userId can update a message log document under their user ID.
     * @allow (delete) - Authenticated user with matching userId can delete a message log document under their user ID.
     * @deny (create) - Authenticated user with non-matching userId cannot create a message log document under another user ID.
     * @deny (update) - Authenticated user with non-matching userId cannot update a message log document under another user ID.
     * @deny (delete) - Authenticated user with non-matching userId cannot delete a message log document under another user ID.
     * @principle Enforces user-ownership: Only the authenticated user can manage message logs under their own user ID.
     */
    match /users/{userId}/messagelogs/{messagelogId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/templates/{templateId} collection.
     * @path /databases/{database}/documents/users/{userId}/templates/{templateId}
     * @allow (create) - Authenticated user with matching userId can create a template document under their user ID.
     * @allow (update) - Authenticated user with matching userId can update a template document under their user ID.
     * @allow (delete) - Authenticated user with matching userId can delete a template document under their user ID.
     * @deny (create) - Authenticated user with non-matching userId cannot create a template document under another user ID.
     * @deny (update) - Authenticated user with non-matching userId cannot update a template document under another user ID.
     * @deny (delete) - Authenticated user with non-matching userId cannot delete a template document under another user ID.
     * @principle Enforces user-ownership: Only the authenticated user can manage message templates under their own user ID.
     */
    match /users/{userId}/templates/{templateId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}