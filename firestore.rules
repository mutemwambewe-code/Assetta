/**
 * @fileoverview Firestore Security Rules for PropEase Zambia platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has full
 * control over their own data, which is nested under their respective user ID.
 *
 * Data Structure:
 * All data is nested under `/users/{userId}`.
 * Subcollections include:
 * - `/users/{userId}/properties/{propertyId}`
 * - `/users/{userId}/tenants/{tenantId}`
 * - `/users/{userId}/messagelogs/{messagelogId}`
 * - `/users/{userId}/templates/{templateId}`
 *
 * Key Security Decisions:
 * - Users can only access data under their own user ID.
 * - Listing other users is disallowed.
 *
 * Denormalization for Authorization:
 *  - The rules rely on the path `/users/{userId}` to determine ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to user documents.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their own document.
     * @deny (create) User with ID 'user456' cannot create a document with ID 'user123'.
     * @principle Enforces user-ownership: Only the authenticated user can read/write their own data.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);

      /**
       * @description Controls access to properties documents.
       * @path /users/{userId}/properties/{propertyId}
       * @allow (create) User with ID 'user123' can create property document under their user id
       * @deny (create) User with ID 'user456' cannot create property document under user id 'user123'.
       * @principle Enforces user-ownership: Only the authenticated user can read/write their own properties.
       */
      match /properties/{propertyId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Controls access to tenants documents.
       * @path /users/{userId}/tenants/{tenantId}
       * @allow (create) User with ID 'user123' can create tenant document under their user id
       * @deny (create) User with ID 'user456' cannot create tenant document under user id 'user123'.
       * @principle Enforces user-ownership: Only the authenticated user can read/write their own tenants.
       */
      match /tenants/{tenantId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Controls access to messagelog documents.
       * @path /users/{userId}/messagelogs/{messagelogId}
       * @allow (create) User with ID 'user123' can create messagelog document under their user id
       * @deny (create) User with ID 'user456' cannot create messagelog document under user id 'user123'.
       * @principle Enforces user-ownership: Only the authenticated user can read/write their own messagelogs.
       */
      match /messagelogs/{messagelogId} {
          allow get: if isOwner(userId);
          allow list: if isOwner(userId);
          allow create: if isOwner(userId);
          allow update: if isExistingOwner(userId);
          allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Controls access to template documents.
       * @path /users/{userId}/templates/{templateId}
       * @allow (create) User with ID 'user123' can create template document under their user id
       * @deny (create) User with ID 'user456' cannot create template document under user id 'user123'.
       * @principle Enforces user-ownership: Only the authenticated user can read/write their own templates.
       */
      match /templates/{templateId} {
          allow get: if isOwner(userId);
          allow list: if isOwner(userId);
          allow create: if isOwner(userId);
          allow update: if isExistingOwner(userId);
          allow delete: if isExistingOwner(userId);
      }
    }
  }
}